<Page
    x:Class="WallYouNeed.App.Pages.BackieeImagesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:WallYouNeed.App.Pages"
    mc:Ignorable="d"
    Title="Latest Wallpapers" 
    d:DesignHeight="650" 
    d:DesignWidth="800">

    <Page.Resources>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:StringCompareVisibilityConverter x:Key="StringCompareVisibilityConverter"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top bar with title and buttons -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Title -->
            <TextBlock Grid.Column="0" 
                       Text="Latest Wallpapers" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Margin="20,10,0,10" 
                       VerticalAlignment="Center"/>
            
            <!-- Action Buttons -->
            <StackPanel Grid.Column="1" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Margin="0,10,20,10">
                <!-- Filter Button -->
                <Button Margin="0,0,10,0" 
                        Padding="10,5" 
                        Background="#333333" 
                        Foreground="White" 
                        BorderThickness="0"
                        Click="FilterButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M9,5C9,3.89 9.89,3 11,3C12.11,3 13,3.89 13,5C13,6.11 12.11,7 11,7C9.89,7 9,6.11 9,5M5,8C5,6.89 5.89,6 7,6C8.11,6 9,6.89 9,8C9,9.11 8.11,10 7,10C5.89,10 5,9.11 5,8M11,10C12.11,10 13,10.89 13,12C13,13.11 12.11,14 11,14C9.89,14 9,13.11 9,12C9,10.89 9.89,10 11,10M2,13C2,11.89 2.89,11 4,11C5.11,11 6,11.89 6,13C6,14.11 5.11,15 4,15C2.89,15 2,14.11 2,13M11,17C9.89,17 9,16.11 9,15C9,13.89 9.89,13 11,13C12.11,13 13,13.89 13,15C13,16.11 12.11,17 11,17M7,20C5.89,20 5,19.11 5,18C5,16.89 5.89,16 7,16C8.11,16 9,16.89 9,18C9,19.11 8.11,20 7,20M17,6C18.11,6 19,6.89 19,8C19,9.11 18.11,10 17,10C15.89,10 15,9.11 15,8C15,6.89 15.89,6 17,6M17,14C15.89,14 15,13.11 15,12C15,10.89 15.89,10 17,10C18.11,10 19,10.89 19,12C19,13.11 18.11,14 17,14M17,22C15.89,22 15,21.11 15,20C15,18.89 15.89,18 17,18C18.11,18 19,18.89 19,20C19,21.11 18.11,22 17,22" 
                              Fill="White" 
                              Width="16" 
                              Height="16" 
                              Stretch="Uniform" 
                              Margin="0,0,5,0"/>
                        <TextBlock Text="Filter" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <!-- Set as slideshow Button -->
                <Button Padding="10,5" 
                        Background="#333333" 
                        Foreground="White" 
                        BorderThickness="0"
                        Click="SetAsSlideshowButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M8,7A2,2 0 0,0 6,9V14.66L2.25,18.41L3.66,19.82L8,15.5V9A2,2 0 0,1 10,7V5A4,4 0 0,0 6,9V13.74L4.92,14.82C4.73,13.97 4,13.83 4,13V9A6,6 0 0,1 10,3V1H12V3A6,6 0 0,1 18,9V13C18,13.83 17.27,13.97 17.08,14.82L16,13.74V9A4,4 0 0,0 12,5V7A2,2 0 0,1 14,9V15.5L18.34,19.82L19.75,18.41L16,14.66V9A2,2 0 0,0 14,7H12V9A2,2 0 0,0 14,11V13H12V11A2,2 0 0,0 10,9V7H8M14,15V17H12V15H14M10,15V17H8V15H10Z" 
                              Fill="White" 
                              Width="16" 
                              Height="16" 
                              Stretch="Uniform" 
                              Margin="0,0,5,0"/>
                        <TextBlock Text="Set as slideshow" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Status indicator -->
        <TextBlock x:Name="StatusTextBlock" 
                   Grid.Row="1" 
                   Text="Loading wallpapers..." 
                   Visibility="Collapsed"
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   FontSize="18" 
                   Margin="0,10,0,10"/>

        <!-- Loading spinner -->
        <ProgressBar x:Name="LoadingProgressBar" 
                     Grid.Row="1"
                     IsIndeterminate="True" 
                     Width="200" 
                     Height="20"
                     Visibility="Collapsed"
                     HorizontalAlignment="Center" 
                     VerticalAlignment="Center" 
                     Margin="0,40,0,0"/>

        <ScrollViewer x:Name="MainScrollViewer" 
                      Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled"
                      ScrollChanged="MainScrollViewer_ScrollChanged">
            <ItemsControl x:Name="ImagesItemsControl" Margin="10">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="4" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="LightGray" 
                                BorderThickness="1" 
                                Margin="5" 
                                Padding="0"
                                CornerRadius="15"
                                ClipToBounds="True"
                                Tag="{Binding}"
                                MouseLeftButtonUp="ImageBorder_MouseLeftButtonUp"
                                Cursor="Hand">
                                    <Border.Clip>
                                        <RectangleGeometry Rect="0,0,250,150" RadiusX="15" RadiusY="15"/>
                                    </Border.Clip>
                                    <Grid>
                                        <!-- Background Image -->
                                        <Image Source="{Binding ImageUrl}" 
                                               Width="300"
                                               Height="150"
                                               Stretch="UniformToFill" 
                                               RenderOptions.BitmapScalingMode="HighQuality"/>
                                        
                                        <!-- Semi-transparent overlay -->
                                        <!-- <Border Background="#20000000" CornerRadius="15"/> -->
                                        
                                        <!-- Badges overlay -->
                                        <Grid>
                                            <!-- Quality tags on the left -->
                                            <StackPanel Orientation="Horizontal" 
                                                        HorizontalAlignment="Left" 
                                                        VerticalAlignment="Top" 
                                                        Margin="0,0,0,0">
                                                <!-- 4K tag -->
                                                <Image Source="/Assets/4k_logo.png" 
                                                       Height="48" 
                                                       Visibility="{Binding ResolutionLabel, Converter={StaticResource StringCompareVisibilityConverter}, ConverterParameter=4K}"/>
                                                
                                                <!-- 5K tag -->
                                                <Image Source="/Assets/5k_logo.png" 
                                                       Height="48" 
                                                       Visibility="{Binding ResolutionLabel, Converter={StaticResource StringCompareVisibilityConverter}, ConverterParameter=5K}"/>
                                                
                                                <!-- 8K tag -->
                                                <Image Source="/Assets/8k_logo.png" 
                                                       Height="48" 
                                                       Visibility="{Binding ResolutionLabel, Converter={StaticResource StringCompareVisibilityConverter}, ConverterParameter=8K}"/>
                                            </StackPanel>
                                            
                                            <!-- AI badge on the right -->
                                            <Image Source="/Assets/aigenerated-icon.png" 
                                                   Height="36" 
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Top"
                                                   Margin="0,10,20,0"
                                                   Visibility="{Binding IsAI, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}"/>
                                        </Grid>
                                        
                                        <!-- Loading indicator overlay -->
                                        <ProgressBar x:Name="ImageLoadingProgress"
                                                     IsIndeterminate="True"
                                                     Width="80"
                                                     Height="10"
                                                     Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                     VerticalAlignment="Center"
                                                     HorizontalAlignment="Center"
                                                     Panel.ZIndex="2"/>

                                        <!-- Resolution text (now hidden) -->
                                        <Border Background="#80000000" 
                                                CornerRadius="3" 
                                                Padding="4,2"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Bottom"
                                                Margin="8"
                                                Panel.ZIndex="2"
                                                Visibility="Collapsed">
                                            <TextBlock Text="{Binding Resolution}" 
                                                     Foreground="White" 
                                                     FontSize="12"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Page> 